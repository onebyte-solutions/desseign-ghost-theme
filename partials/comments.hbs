<section class="post-comments compact">
	{{#if @custom.disqus_shortname}}
		<div id="disqus_thread" class="disqus-lazy"></div>
		<script>
			var disqus_id = "{{@custom.disqus_shortname}}",
			disqus_config = function () {
				this.page.url = "{{url absolute="true"}}";
				this.page.identifier = "ghost-{{comment_id}}"
			};
		</script>
	{{/if}}

	{{#if comments}}
	 {{comments title="" count=false mode=@custom.color_scheme}}
	{{/if}}
</section>
