<div class="tag-card">
	{{#if feature_image}}
		<div class="tag-image">
			<a href="{{url}}">
				<img src="{{feature_image}}" loading="lazy" alt="{{name}}">
			</a>
		</div>
	{{/if}}
	<div class="tag-info">
		<h2><a href="{{url}}">{{name}}</a></h2>
		<div class="tag-meta">
			<span class="tag-post-count">
				{{count.posts}}
				{{plural count.posts empty=(t "No posts") singular=(t "post") plural=(t "posts")}}
			</span>
			{{#if description}}
				<p>{{description}}</p>
			{{/if}}
		</div>
	</div>
</div>
