{{!< default}} <section class="contact-schedule">
    <h1>Contact us</h1>
    <div class="contact-schedule-container">
        <!-- Contact Form -->
        <div class="contact-form">
            <h2>Get in Touch</h2>
            <form action="https://formspree.io/f/xldjpyvn" method="POST">
                <input type="text" name="name" placeholder="Your Name" required>
                <input type="email" name="email" placeholder="Your Email" required>
                <textarea name="message" rows="5" placeholder="Your Message" required></textarea>
                <button type="submit">Send Message</button>
            </form>
        </div>
        <!-- Calendly Embed -->
        <div class="calendly-embed">
            <h2>Schedule a Call</h2>
            <!-- Calendly inline widget begin -->
            <div class="calendly-inline-widget" data-url="https://calendly.com/desseignstudio/meeting"
                style="min-width:320px;height:700px;"></div>
            <script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js" async></script>
            <!-- Calendly inline widget end -->
        </div>
    </div>
    </section>


    <style>
        section.contact-schedule {
            padding: 2rem 0;
            max-width: 1200px;
            margin: 0 auto;
        }

        section.contact-schedule h1 {
            text-align: center;
            margin-bottom: 2rem;
            font-size: 2.5rem;
        }

        /* Container for side-by-side columns */
        .contact-schedule-container {
            display: flex;
            flex-wrap: wrap;
            gap: 2rem;
        }

        .contact-form,
        .calendly-embed {
            flex: 1 1 500px;
            background: #fff;
            padding: 2rem;
            border-radius: 8px;
            height: min-content;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        /* Contact Form Styles */
        .contact-form h2 {
            margin-bottom: 1.5rem;
            font-size: 1.75rem;
        }

        .contact-form form {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .contact-form input,
        .contact-form textarea {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 1rem;
        }

        .contact-form button {
            padding: 0.75rem;
            background-color: #333;
            color: #fff;
            border: none;
            border-radius: 4px;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .contact-form button:hover {
            background-color: #555;
        }

        /* Calendly Embed Styles */
        .calendly-embed h2 {
            margin-bottom: 1rem;
            font-size: 1.75rem;
        }

        .calendly-inline-widget {
            width: 100%;
            min-width: 320px;
            height: 630px;
            border: none;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .contact-schedule-container {
                flex-direction: column;
            }
        }

        @media(max-width: 550px) {
           .contact-schedule-container{
            flex-wrap: nowrap;
           }
           section.contact-schedule h1{
            font-size: 2rem;
           }
           .calendly-mobile{
            min-width: 0 !important;
           }
        }
    </style>